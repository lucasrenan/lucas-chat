<%= form_for(user, html: {class: 'form-signin'}) do |f| %>
  <h2 class="form-signin-heading">Lucas Demo Chat</h2>

  <% if user.errors.any? %>

    <div class="alert alert-danger" role="alert">
      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
      <span>Error:</span>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :email, class: 'sr-only' %>
  <%= f.text_field :email, class: 'form-control', placeholder: 'Email address', required: true, autofocus: true %>

  <%= f.submit value: 'Sign in', class: 'btn btn-lg btn-primary btn-block' %>
<% end %>
